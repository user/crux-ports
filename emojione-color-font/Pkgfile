# Description: A color emoji SVGinOT font using Emoji One graphics with diversity and country flags.
# URL:         https://github.com/eosrei/emojione-color-font
# Maintainer:  Ilya Solovyov, solovyov at protonmail dot com
# Depends on:  xorg-mkfontdir xorg-mkfontscale fontconfig
# vim:set ts=4 sw=4:

name=emojione-color-font
version=1.3
release=1
source=(https://github.com/eosrei/emojione-color-font/releases/download/v1.3/EmojiOneColor-SVGinOT-Linux-$version.tar.gz)

build() {
	cd EmojiOneColor-SVGinOT-Linux-$version

	install -m 0644 -D EmojiOneColor-SVGinOT.ttf $PKG/usr/share/fonts/X11/TTF/EmojiOneColor-SVGinOT.ttf
	install -m 0644 -D fontconfig/56-emojione-color.conf $PKG/etc/fonts/conf.avail/56-emojione-color.conf
}

