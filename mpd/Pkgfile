# Description: Music Player Daemon
# URL:         http://www.musicpd.org/
# Maintainer:  Ilya Solovyov, solovyov at protonmail dot com
# Depends on:  boost libmpdclient libmad libvorbis libid3tag glib
# vim:set ts=8 sw=8:

name=mpd
version=0.20.17
release=1
source=(http://www.musicpd.org/download/mpd/0.20/$name-$version.tar.xz)

build() {
	cd $name-$version

	./autogen.sh
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--enable-database \
		--enable-libmpdclient \
		--enable-alsa \
		--enable-curl \
		--enable-icu \
		--disable-inotify \
		--disable-aac \
		--disable-soundcloud \
		--disable-openal \
		--disable-oss \
		--disable-systemd-daemon \
		--disable-smbclient \
		--disable-gme \
		--disable-roar \
		--disable-sndio \
		--disable-haiku \
		--disable-jack \
		--disable-pulse \
		--disable-sidplay \
		--with-zeroconf=no

	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/doc
	install -D -m 0644 doc/mpdconf.example $PKG/usr/share/mpd/mpdconf.example
}

