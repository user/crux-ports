# Description: an interactive process viewer for Unix
# URL:         http://hisham.hm/htop/
# Maintainer:  Ilya Solovyov, solovyov at protonmail dot com
# Depends on:  ncurses
# vim:set ts=4 sw=4:

name=htop
version=2.0.2
release=1
source=(http://hisham.hm/htop/releases/$version/$name-$version.tar.gz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--disable-nls \
		--enable-proc \
		--enable-unicode \
		--enable-native-affinity

	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/share/{applications,pixmaps}
}

