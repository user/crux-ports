# Description: HexChat is an IRC client
# Maintainer:  Ilya Solovyov, solovyov at pm dot me
# Depends on:  gtk dbus-glib libproxy
# URL:         https://hexchat.github.io/

name=hexchat
version=2.14.2
release=1
source=(http://dl.hexchat.net/hexchat/$name-$version.tar.xz)

build() {
	cd $name-$version

	meson --prefix=/usr build \
		-Dwith-appdata=false \
		-Dwith-checksum=false \
		-Dwith-fishlim=false \
		-Dwith-gtk=true \
		-Dwith-libcanberra=false \
		-Dwith-libnotify=false \
		-Dwith-lua=false \
		-Dwith-sysinfo=false \
		-Dwith-python=false
	ninja -C build
	DESTDIR=$PKG ninja -C build install

	rm -r $PKG/usr/share/{applications,icons,locale}
}

