# Description: Read and write meta information in files
# URL:         https://www.sno.phy.queensu.ca/~phil/exiftool/
# Maintainer:  Ilya Solovyov, solovyov at protonmail dot com
# Depends on:  perl
# vim:set ft=sh ts=8 sw=8:

name=exiftool
version=10.80
release=1
source=(https://www.sno.phy.queensu.ca/~phil/exiftool/Image-ExifTool-$version.tar.gz)

build() {
	cd Image-ExifTool-$version

	perl Makefile.PL
	make
	make DESTDIR=$PKG install

	find $PKG \( -iname '*.pod' -or \
		-iname '.packlist' -or \
		-iname 'readme' \) -delete
	find $PKG -empty -delete
	rm -rf $PKG/usr/lib/perl5/site_perl/5.26/Image/ExifTool/{Charset,Lang}
}

