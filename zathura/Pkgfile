# Description: Customizable and functional document viewer
# URL:         https://pwmt.org/projects/zathura/
# Maintainer:  Ilya Solovyov, solovyov at pm dot me
# Depends on:  girara

name=zathura
version=0.4.3
release=1
source=(https://github.com/pwmt/zathura/archive/$version.tar.gz)

build() {
	cd $name-$version

	meson --prefix=/usr build
	cd build
	ninja

	DESTDIR=$PKG ninja install
	rm -rf $PKG/usr/share/{applications,icons,locale}
	mv $PKG/usr/share/zsh/vendor-completions $PKG/usr/share/zsh/site-functions

}

